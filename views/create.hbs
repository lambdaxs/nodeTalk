<!--发布话题-->
<div class="ui grid">
    <div class="four wide column">
        <a href="" class="avatar" data-title={{user.name}} data-content={{user.bio}}>
            <img src="/images/{{user.avatar}}" class="avatar">
        </a>
    </div>
    <div class="eight wide column">
        <form class="ui form segment" method="post" enctype="application/x-www-form-urlencoded">
            <div class="field required">
                <label>标题</label>
                <input placeholder="标题" name="title"/>
            </div>
            <div class="field required">
                <label>内容</label>
                <textarea name="content" rows="12" placeholder="内容"></textarea>
            </div>
            <input type="submit" value="完成" class="ui button fluid"/>
        </form>
    </div>
</div>